@model IEnumerable<Contoso.Models.Student>

@{
    ViewBag.Title = "Students";
}

<h2>Student index</h2>

<p>
    @Html.ActionLink("Register new", "Create", "Student", new { @class = "btn btn-primary btn-sm" })
</p>
<table class="table table-responsive table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstMidName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EnrollmentDate)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstMidName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EnrollmentDate)
            </td>
            <td>
                <a title="Edit this student" href="@Url.Action("Edit", "Student", new { id = item.ID })" class="btn btn-warning btn-xs">
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                </a>
                <a title="View student details" href="@Url.Action("Details", "Student", new { id=item.ID })" class="btn btn-info btn-xs">
                    <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
                </a>
                <a title="Delete this student" href="@Url.Action("Delete", "Student", new { id=item.ID })" class="btn btn-danger btn-xs">
                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                </a>
            </td>
        </tr>
    }

</table>
