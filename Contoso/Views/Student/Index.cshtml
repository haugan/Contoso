@model IEnumerable<Contoso.Models.Student>

@{
    ViewBag.Title = "Students";
}

<div class="page-header">
    <h1>Student index</h1>
    <h4>Click new student to register.</h4>
    <a title="Back to index" href="@Url.Action("Index", "Home")">
        <span class="glyphicon glyphicon-home" aria-hidden="true"></span>
        Back to home
    </a>
</div>
<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    @Html.ActionLink("Lastname", "Index", new { sortOrder = ViewBag.LastNameSortParam })
                </th>
                <th>
                    @Html.ActionLink("Firstname", "Index", new { sortOrder = ViewBag.FirstNameSortParam })
                </th>
                <th>
                    @Html.ActionLink("Enrollment date", "Index", new { sortOrder = ViewBag.DateSortParam })
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a title="View student details" href="@Url.Action("Details", "Student", new { id=item.ID })">
                            @Html.DisplayFor(modelItem => item.LastName)
                        </a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstMidName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EnrollmentDate)
                    </td>
                    <td>
                        <a title="Edit this student" href="@Url.Action("Edit", "Student", new { id = item.ID })" class="btn btn-warning btn-xs">
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        </a>
                        <a title="Delete this student" href="@Url.Action("Delete", "Student", new { id=item.ID })" class="btn btn-danger btn-xs">
                            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<a title="Register new student" href="@Url.Action("Create", "Student")" class="btn btn-success">
    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
    New student
</a>