@model Contoso.Models.Student

@{
    ViewBag.Title = "Details";
}

<div class="page-header">
    <h1>Student details</h1>
    <h4>View registered data on this student.</h4>
    <a title="Back to index" href="@Url.Action("Index", "Student")">
        <span class="glyphicon glyphicon-home" aria-hidden="true"></span>
        Back to index
    </a>
</div>
<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.FirstMidName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.FirstMidName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.EnrollmentDate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.EnrollmentDate)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Enrollments)
        </dt>
        <dd>
            <table class="table table-responsive table-striped table-hover">
                <tr>
                    <th>Course Title</th>
                    <th>Grade</th>
                </tr>
                @foreach (var item in Model.Enrollments)
                {
                    <tr>
                        <td>
                            <a title="View course details" href="@Url.Action("Details", "Course", new { id=item.CourseID })">@item.Course.Title</a>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Grade)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<a title="Edit student details" href="@Url.Action("Edit", "Student", new { id = Model.ID })" class="btn btn-warning">
    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
    Edit
</a>
<a title="Delete this student" href="@Url.Action("Delete", "Student", new { id = Model.ID })" class="btn btn-danger">
    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
    Delete
</a>