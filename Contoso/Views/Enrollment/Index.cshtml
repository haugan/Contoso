@model IEnumerable<Contoso.Models.Enrollment>

@{
    ViewBag.Title = "Enrollments";
}

<div class="page-header">
    <h1>Enrollment index</h1>
    <h4>Click new enrollment to register.</h4>
    <a title="Back to index" href="@Url.Action("Index", "Home")">
        <span class="glyphicon glyphicon-home" aria-hidden="true"></span>
        Back to home
    </a>
</div>
<table class="table table-responsive table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Course.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Student.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Grade)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Course.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Student.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Grade)
        </td>
        <td>
            <a title="Edit this enrollment" href="@Url.Action("Edit", "Enrollment", new { id=item.EnrollmentID })" class="btn btn-warning btn-xs">
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            </a>
            <a title="View enrollment details" href="@Url.Action("Details", "Enrollment", new { id=item.EnrollmentID })" class="btn btn-info btn-xs">
                <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
            </a>
            <a title="Delete this enrollment" href="@Url.Action("Delete", "Enrollment", new { id=item.EnrollmentID })" class="btn btn-danger btn-xs">
                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
            </a>
        </td>
    </tr>
}

</table>
<p>
    @Html.ActionLink("New enrollment", "Create", "Enrollment", new { @class = "btn btn-success btn-sm", title="Register new enrollment" })
</p>