@model Contoso.Models.Course

@{
    ViewBag.Title = "Details";
}

<div class="page-header">
    <h1>Course details</h1>
    <h4>View registered data on this course.</h4>
    <a title="Back to index" href="@Url.Action("Index", "Course")">
        <span class="glyphicon glyphicon-home" aria-hidden="true"></span>
        Back to index
    </a>
</div>
<div>
    <dl class="dl-horizontal">
        <dt>Course title</dt>
        <dd>@Html.DisplayFor(model => model.Title)</dd>
        <dt>Course credits</dt>
        <dd>@Html.DisplayFor(model => model.Credits)</dd>
        <dt>Student enrollments</dt>
        <dd>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Student name</th>
                        <th>Enrollment date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Enrollments)
                    {
                        <tr>
                            <td>
                                <a title="View course details" href="@Url.Action("Details", "Student", new { id=item.StudentID})">@item.Student.LastName, @item.Student.FirstMidName</a>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Student.EnrollmentDate)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </dd>
    </dl>
</div>
<a title="Edit course details" href="@Url.Action("Edit", "Course", new { id = Model.CourseID })" class="btn btn-warning">
    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
    Edit
</a>
<a title="Delete this course" href="@Url.Action("Delete", "Course", new { id = Model.CourseID })" class="btn btn-danger">
    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
    Delete
</a>