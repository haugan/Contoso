@model IEnumerable<Contoso.Models.Course>

@{
    ViewBag.Title = "Courses";
}

<div class="page-header">
    <h1>Course index</h1>
    <h4>Click new course to register.</h4>
    <a title="Back to index" href="@Url.Action("Index", "Home")">
        <span class="glyphicon glyphicon-home" aria-hidden="true"></span>
        Back to home
    </a>
</div>
<table class="table table-responsive table-striped table-hover">
    <tr>
        <th>Course title</th>
        <th>Course credits</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <a title="View course details" href="@Url.Action("Details", "Course", new { id=item.CourseID })">
                    @Html.DisplayFor(modelItem => item.Title)
                </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Credits)
            </td>
            <td>
                <a title="Edit this course" href="@Url.Action("Edit", "Course", new { id=item.CourseID })" class="btn btn-warning btn-xs">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                </a>
                <a title="Delete this course" href="@Url.Action("Delete", "Course", new { id=item.CourseID })" class="btn btn-danger btn-xs">
                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                </a>
            </td>
        </tr>
    }

</table>

<a title="Register new course" href="@Url.Action("Create", "Course")" class="btn btn-success">
    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
    New course
</a>